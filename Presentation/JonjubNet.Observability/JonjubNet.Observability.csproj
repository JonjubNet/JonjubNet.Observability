  </ItemGroup>

  <ItemGroup>
    <Folder Include="Hosting\Logging\" />
    <Folder Include="Hosting\Metrics\" />
    <Folder Include="Hosting\Tracing\" />
  </ItemGroup>

  <!-- Configurar para incluir ensamblados de proyectos referenciados en el paquete -->
  <PropertyGroup>
    <TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);CopyProjectReferencesToPackage</TargetsForTfmSpecificBuildOutput>
    <!-- Evitar que NuGet genere dependencias de paquetes para ProjectReference -->
    <SuppressDependenciesWhenPacking>false</SuppressDependenciesWhenPacking>
  </PropertyGroup>
  
  <!-- Target para eliminar dependencias de ProjectReference del .nuspec usando PowerShell -->
  <Target Name="RemoveProjectReferenceDependenciesFromNuspec" AfterTargets="GenerateNuspec" BeforeTargets="Pack">
    <PropertyGroup>
      <NuspecFile>$(IntermediateOutputPath)$(PackageId).nuspec</NuspecFile>
    </PropertyGroup>
    <Exec Command="powershell -NoProfile -ExecutionPolicy Bypass -Command &quot;$content = Get-Content '$(NuspecFile)' -Raw; $content = $content -replace '&lt;dependency id=&quot;JonjubNet\.Observability\.Metrics\.Core&quot;[^&gt;]*&gt;[^&lt;]*&lt;/dependency&gt;', ''; $content = $content -replace '&lt;dependency id=&quot;JonjubNet\.Observability\.Metrics\.InfluxDB&quot;[^&gt;]*&gt;[^&lt;]*&lt;/dependency&gt;', ''; $content = $content -replace '&lt;dependency id=&quot;JonjubNet\.Observability\.Metrics\.OpenTelemetry&quot;[^&gt;]*&gt;[^&lt;]*&lt;/dependency&gt;', ''; $content = $content -replace '&lt;dependency id=&quot;JonjubNet\.Observability\.Metrics\.Prometheus&quot;[^&gt;]*&gt;[^&lt;]*&lt;/dependency&gt;', ''; $content = $content -replace '&lt;dependency id=&quot;JonjubNet\.Observability\.Metrics\.Shared&quot;[^&gt;]*&gt;[^&lt;]*&lt;/dependency&gt;', ''; Set-Content -Path '$(NuspecFile)' -Value $content -NoNewline&quot;" Condition="Exists('$(NuspecFile)')" ContinueOnError="false" />
  </Target>

  <Target Name="CopyProjectReferencesToPackage">
    <!-- Obtener las rutas de salida de los proyectos referenciados -->
    <MSBuild Projects="@(ProjectReference)" Targets="GetTargetPath" Properties="Configuration=$(Configuration);Platform=$(Platform);TargetFramework=$(TargetFramework)" SkipNonexistentTargets="true" ContinueOnError="true">
      <Output TaskParameter="TargetOutputs" ItemName="_ReferencedProjectOutputs" />
    </MSBuild>
    
    <!-- Agregar los ensamblados al paquete -->
    <ItemGroup>
      <TfmSpecificPackageFile Include="@(_ReferencedProjectOutputs)" Condition="Exists('%(FullPath)') AND '%(Filename)' != '$(AssemblyName)'">
        <PackagePath>lib/$(TargetFramework)/%(Filename)%(Extension)</PackagePath>
      </TfmSpecificPackageFile>
      <!-- Incluir también los archivos XML de documentación -->
      <TfmSpecificPackageFile Include="@(_ReferencedProjectOutputs->'%(RootDir)%(Directory)%(Filename).xml')" Condition="Exists('%(RootDir)%(Directory)%(Filename).xml') AND '%(Filename)' != '$(AssemblyName)'">
        <PackagePath>lib/$(TargetFramework)/%(Filename).xml</PackagePath>
      </TfmSpecificPackageFile>
    </ItemGroup>
  </Target>


</Project>
